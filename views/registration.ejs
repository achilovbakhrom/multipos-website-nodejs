<!-- ==============================================
**Register**
=================================================== -->
<section class="login-outer">
    <div class="content-area">


        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container"> <a id="homeUrl" href="" class="navbar-brand"><img src="../images/logo.png" class="img-fluid" alt=""></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation"> <span class="navbar-toggler-icon"></span> </button>
                <div class="collapse navbar-collapse" style="padding-left: 5%" id="navbarsExampleDefault">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="dropdown5" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img data-language="setflag" src="../../assets/flags/4x3/us.svg" style="height: 17px;"></a>
                                <div class="dropdown-menu" style="min-width: auto; width: auto; padding: 20px 0;">
                                    <a class="dropdown-item" id="enFlag" href="" data-callLang="en">
                                        <img src="../../assets/flags/4x3/us.svg" style="height: 24px;">
                                    </a>
                                    <a class="dropdown-item" id="ruFlag" href="" data-callLang="ru">
                                        <img src="../../assets/flags/4x3/ru.svg" style="height: 24px;">
                                    </a>
                                    <script language="javascript" type="text/javascript">
                                        var url = window.location.pathname
                                        var value = url.substring(url.lastIndexOf('/') + 1);
                                        document.getElementById("enFlag").href = url.replace(value, 'en');
                                        document.getElementById("ruFlag").href = url.replace(value, 'ru');
                                        var urlParams = window.location.pathname.split('/');
                                        var lang = urlParams[urlParams.length-1];
                                        document.getElementById("homeUrl").href = "/"+lang;
                                        document.getElementById("loginUrl").href = "/login/"+lang;
                                    </script>
                                </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="login-form-holder" style="padding: 20px;">
            <div class="inner">
                <div class="login-form">
                    <h3 data-language='lsignup'>Register Now</h3>
                    <form action="javascript:void(0);">
                        <div class="first-name" >
                            <label>First Name</label>
                            <input name="First Name" placeholder="" type="text" id="billing_first_name">
                        </div>
                        <div class="last-name" >
                            <label>Last Name</label>
                            <input name="Last Name" placeholder="" type="text" id="billing_last_name">
                        </div>
                        <div class="company-name" >
                            <label>Company Name</label>
                            <input name="Company Name" placeholder="" type="text" id="billing_company_name">
                        </div>
                        <div class="mail" >
                            <label>Email Address</label>
                            <input name="Email Address" placeholder="" type="text" id="billing_email">
                        </div>
                        <div class="password" >
                            <label>Password</label>
                            <input name="Password" placeholder="" type="text" id="billing_password">
                        </div>
                        <div class="confirm-password" >
                            <label>Confirm Password</label>
                            <input name="Confirm Password" placeholder="" type="text" id="confirm_password">
                        </div>
                        <div class="terms">
                            <label>
                                <input value="" type="checkbox">
                                <span>I agree to all <a href="">terms</a></span></label>
                        </div>
                        <div class="login-btn-sec">
                            <button id="register_now" data-language='lsignup' class="btn login-btn">Register</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="box-hav-accnt">
                <p>Already have an account? <a id="loginUrl" href="" data-language="lsignin">Sign in</a></p>
                <script language="javascript" type="text/javascript">
                    var urlParams = window.location.pathname.split('/');
                    var lang = urlParams[urlParams.length-1];
                    document.getElementById("loginUrl").href = "/login/"+lang;
                </script>
            </div>
        </div>
    </div>
</section>

