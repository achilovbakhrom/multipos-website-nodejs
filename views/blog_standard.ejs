<section class="inner-banner">
    <div class="container">
        <div class="contents">
            <h1>Multipos Blog</h1>
            <p>Latest news about Multipos <span></span></p>
        </div>
    </div>
</section>

<!-- ==============================================
**Blog section**
=================================================== -->
<section class="blog-section">
    <div class="container">
        <div class="blog-sigle-item">
            <div class="blog-content">


                <ul>
                    <% result.forEach(function(item) { %>
                        <li>
                            <%if(currentHash == "#ru") {%>
                                <h4><%= item.titleRu %></h4>
                            <%} else {%>
                                <h4><%= item.titleEn %></h4>
                            <%}%>
                            <div class="box">
                                <ul class="blog-tag">
                                    <li>
                                        <p class="time"><%= item.date %></p>
                                    </li>
                                </ul>
                            </div>
                            <figure class="blog-pic"><img class="img-fluid" src="../images/blog-img-lg-1.jpg" alt="">
                            </figure>
                            <%if(window.location.hash == "#ru") {%>
                                <p><%= item.shortTextRu %></p>
                            <%} else {%>
                                <p><%= item.shortTextEn %></p>
                            <%}%>
                            <ul class="blog-info">
                                <!--<li class="comment">5623 <a href="#">Comments</a></li>-->
                                <!--<li class="like">455 <a href="#">Likes</a></li>-->
                                <li><a href="../blog-single/<%= item._id %>" class="know-more">Know more</a></li>
                            </ul>
                        </li>
                    <% }) %>
                </ul>
                <div class="paging-block">
                    <% if (pages > 0) { %>
                        <ul class="pagination text-center">
                            <% if (current == 1) { %>
                                <li><a href="#" style="padding: 0;"><span style="font-size: 22px;"><<</span></a></li>
                                <li><a href="#" style="padding: 0;"><span style="font-size: 22px;"><</span></a></li>
                            <% } else { %>
                                <li><a href="1" style="padding: 0;"><span style="font-size: 22px;"><<</span></a></li>
                                <li><a href="<%=current-1%>" style="padding: 0;"><span style="font-size: 22px;"><</span></a></li>
                            <% } %>
                            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                            <% if (i !== 1) { %>
                                <li class="disabled"><a>...</a></li>
                            <% } %>
                            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                                <% if (i == current) { %>
                                    <li class="active"><a><%= i %></a></li>
                                <% } else { %>
                                    <li><a href="<%= i %>"><%= i %></a></li>
                                <% } %>
                                <% if (i == Number(current) + 4 && i < pages) { %>
                                    <li class="disabled"><a>...</a></li>
                                <% } %>
                            <% } %>
                            <% if (current == pages) { %>
                                    <li><a href="#" style="padding: 0;"><span style="font-size: 22px;">></span></a></li>
                                    <li><a href="#" style="padding: 0;"><span style="font-size: 22px;">>></span></a></li>
                            <% } else { %>
                                <li><a href="<%=parseInt(current)+1%>" style="padding: 0;"><span style="font-size: 22px;">></span></a></li>
                                <li><a href="<%=pages%>" style="padding: 0;"><span style="font-size: 22px;">>></span></a></li>
                            <% } %>
                        </ul>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>

