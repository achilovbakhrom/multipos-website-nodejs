<script src="../../assets/owl-carousel/js/owl.carousel.min.js"></script>
<!-- Match Height JS -->
<script src="../../assets/matchHeight/js/matchHeight-min.js"></script>
<!-- Custom JS -->
<script src="../../js/custom.js"></script>
<!--Cookie JS-->
<script src="../../js/jquery.cookie.js"></script>
</body>
</html>