<!DOCTYPE html>
<html lang="en">
<% include part_element/head.ejs %>

<body>

<!-- ==============================================
**Preloader**
=================================================== -->
<div id="loader">
    <div id="element">
        <div class="circ-one"></div>
        <div class="circ-two"></div>
    </div>
</div>

<!-- ==============================================
**Header**
=================================================== -->
<% include part_element/header.ejs %>
<!-- ==============================================
**Inner Banner**
=================================================== -->
<section class="inner-banner career-banner">
    <div class="container">
        <div class="contents">
            <h1>User page</h1>
        </div>
    </div>
</section>


<!-- ==============================================
**User page**
=================================================== -->
<section class="our-team-outer padding-lg">
    <div class="container">
        <div>


            <ul class="row team-listing">
                <li class="col-md-2 col-lg-3">
                    <figure><img src="../../images/testimonial-thumb1.jpg" class="rounded-circle img-fluid" alt="">
                    </figure>
                    <h3><%= user.firstName + " " + user.lastName %></h3>
                    <h3><%= user.email %></h3>
                    <p>Address: <%= user.address %></p>
                    <br>
                    <a href="#" class="btn small orange" data-toggle="modal" data-target="#editProfile">Edit
                        information</a>
                    <div class="modal fade" id="editProfile" tabindex="-1" role="dialog"
                         aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Edit profile</h5>
                                </div>
                                <div class="modal-body">
                                    <div class="support-request">
                                        <form action="#" method="get" class="support-form">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <input name="firstName" type="text" placeholder="Firs tName">
                                                    <input name="lastName" type="text" placeholder="Last Email">
                                                    <input name="password" type="text" placeholder="Current Password">
                                                    <input name="newPassword" type="text" placeholder="New Password">
                                                </div>

                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary">Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>

            </ul>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <h4>Cart History </h4>
        <br>
        <table class="table table-hover">
            <thead>
            <tr>
                <% if(lang == "en"){ %>
                    <th scope="col">Purchase Date</th>
                    <th scope="col">Purchase Code</th>
                    <th scope="col">Package</th>
                    <th scope="col">Price</th>
                    <th scope="col">Activation Date</th>
                    <th scope="col">Expiration Date</th>
                    <th scope="col">Company</th>
                <% } else { %>
                    <th scope="col">Дата покупки</th>
                    <th scope="col">Код покупки</th>
                    <th scope="col">План</th>
                    <th scope="col">Цена</th>
                    <th scope="col">Дата активации</th>
                    <th scope="col">Дата окончания</th>
                    <th scope="col">Компания</th>
                <% } %>
                <!--<th scope="col">Purchase Date</th>-->
                <!--<th scope="col">Purchase code</th>-->
                <!--<th scope="col">Package Type</th>-->
                <!--<th scope="col">Price</th>-->
                <!--<th scope="col">Activation Date</th>-->
                <!--<th scope="col">Expiration Date</th>-->
                <!--<th scope="col">Company</th>-->
            </tr>
            </thead>
            <tbody>
            <% histories.forEach(function(item){ %>
            <tr>
                <th scope="row"><%= item.purchaseDate %></th>
                <td><%= item._id %></td>
                <% if(lang == "en"){ %>
                <td><%= item.plan.planNameEn %></td>
                <% } else { %>
                <td><%= item.plan.planNameRu %></td>
                <% } %>
                <td>$<%= item.price %></td>
                <td><%= item.activationDate %></td>
                <td><%= item.expirationDate %></td>
                <td><%= item.company %></td>
            </tr>
            <% }) %>
            </tbody>
        </table>

    </div>
</section>


<!-- ==============================================
**Footer opt1**
=================================================== -->
<% include part_element/footer.ejs %>

